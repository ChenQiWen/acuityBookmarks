{
  "name": "acuity-bookmarks-backend",
  "version": "1.0.0",
  "description": "Backend for AcuityBookmarks Chrome Extension",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "bun server.js",
    "dev": "bun --hot server.js",
    "dev:enhanced": "bun scripts/dev-server.js",
    "dev:watch": "bun --watch server.js",
    "dev:inspect": "bun --hot --inspect server.js",
    "dev:verbose": "bun --hot --verbose server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "vitest": "^2.1.8"
  }
}
