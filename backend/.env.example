# Backend local development environment variables
# Copy to .env.development and fill with your credentials

# Cloudflare account credentials for Workers AI REST API
CLOUDFLARE_ACCOUNT_ID="your_account_id"
CLOUDFLARE_API_TOKEN="your_api_token"

# Optional: default model and allowed models list
# Examples: @cf/openai/gpt-4o-mini, @cf/meta/llama-3.1-8b-instruct
DEFAULT_AI_MODEL="@cf/meta/llama-3.1-8b-instruct"
ALLOWED_AI_MODELS="@cf/meta/llama-3.1-8b-instruct,@cf/openai/gpt-4o-mini"

# Server settings
PORT="3000"
HOST="127.0.0.1"