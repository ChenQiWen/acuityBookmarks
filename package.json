{
  "name": "acuitybookmarks-root",
  "private": true,
  "version": "1.0.0",
  "description": "AcuityBookmarks monorepo (Bun workspaces)",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "website",
    "packages/*"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.21",
  "resolutions": {
    "zod": "^3.25.8",
    "@types/node": "^24.3.0",
    "postcss": "^8.4.41",
    "stylelint": "^16.25.0",
    "typescript": "~5.8.3",
    "eslint": "^9.35.0"
  },
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "clean:deps": "rm -rf node_modules frontend/node_modules backend/node_modules website/node_modules packages/*/node_modules bun.lockb frontend/bun.lock backend/bun.lock 2>/dev/null || true && echo 'ðŸ§¹ æ¸…ç†å®Œæˆ'",
    "reinstall": "bun run clean:deps && bun install && echo 'âœ… ä¾èµ–å·²æ¸…ç†å¹¶é‡æ–°å®‰è£…'",
    "dev": "bunx turbo run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "watch": "bunx turbo run build:watch watch:clean dev --filter=frontend --filter=backend --parallel",
    "watch:frontend": "bunx turbo run build:watch watch:clean --filter=frontend --parallel",
    "dev:website": "cd website && bun run dev",
   
    "build:frontend": "cd frontend && bun run build",
    "build:website": "cd website && bun run build",
    "build:all": "bunx turbo run build",
    "build": "bun run build:all",

    "test": "bunx turbo run test",
    "test:backend": "cd backend && bun run test",
    "typecheck": "bunx turbo run typecheck",
    "lint": "bun ./scripts/smart-lint.mjs",
    "format": "bunx prettier --write \"**/*.{js,ts,json,md,vue}\"",
    "stylelint": "cd frontend && stylelint \"src/**/*.{css,scss,vue}\" --allow-empty-input",
    "stylelint:fix": "cd frontend && stylelint \"src/**/*.{css,scss,vue}\" --fix --allow-empty-input",
    "deploy:backend": "cd backend && bun run deploy",
    "deploy:website": "cd website && bun run build && echo 'Website build complete. Deploy dist/ directory to your hosting service.'",
    "audit:frontend": "bun run build:frontend && bunx -y @lhci/cli autorun --config ./frontend/lighthouserc.json && bun ./scripts/lhci-summary.mjs && bun ./scripts/open-median-reports.mjs frontend",
    "audit:website": "cd website && bun run generate && bunx -y @lhci/cli autorun --config ./lighthouserc.json && bun ../scripts/lhci-summary-website.mjs && bun ../scripts/open-median-reports.mjs website",
    "clean": "cd frontend && bun run clean-dist && cd .. && rm -rf node_modules/.cache 2>/dev/null || true",

    "e2e": "bun ./scripts/e2e-management.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl}",
    "e2e:perf": "bun ./scripts/e2e-management.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl} --perf --cpu ${CPU_RATE:-4} --net ${NET_PRESET:-slow4g}",
    "e2e:all": "bun run e2e && bun run e2e:perf",

    "db:start": "cd backend && bun run db:start",
    "db:stop": "cd backend && bun run db:stop",
    "db:reset": "cd backend && bun run db:reset",
    "db:new": "cd backend && bun run db:new",
    "db:logs": "cd backend && bun run logs",
    "env:sync": "bun ./scripts/sync-env.mjs",
    "export:env": "bun ./scripts/export-env.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl}",
    "import:env": "bun ./scripts/import-env.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl}"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.41",
    "postcss-html": "^1.7.0",
    "puppeteer-core": "^23.7.0",
    "sass-embedded": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "turbo": "^2.6.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0"
  },
  "dependencies": {
    "eslint-config-prettier": "^10.1.8"
  }
}
