{
  "name": "acuitybookmarks-root",
  "private": true,
  "version": "1.0.0",
  "description": "AcuityBookmarks monorepo (Bun workspaces)",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.21",
  "scripts": {
    "//-prepare": "--- PREPARE & SETUP ---",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "install:all": "bun install",
    "clean:deps": "rm -rf node_modules frontend/node_modules backend/node_modules bun.lockb frontend/bun.lock backend/bun.lock 2>/dev/null || true && echo '🧹 清理完成，可以重新运行 bun install'",
    "install:backend-standalone": "cd backend && bun install --no-save && echo '📦 backend 已安装独立 node_modules'",
    "//-development": "--- DEVELOPMENT ---",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:all": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\"",
    "//-build": "--- BUILD ---",
    "build:frontend": "cd frontend && bun run build",
    "build:frontend:fast": "cd frontend && bun run build:prod",
    "build:frontend:analyze": "cd frontend && bun run build:analyze",
    "build:hot": "cd frontend && bun run build:hot",
    "build:hot:no-lint": "cd frontend && bun run build:hot:no-lint",
    "build:backend": "echo 'Backend is a Cloudflare Worker, deployed directly without a separate build step.'",
    "build:all": "bun run build:frontend",
    "typecheck": "cd frontend && bun run type-check",
    "typecheck:force": "cd frontend && bun vue-tsc -b --force",
    "//-linting": "--- LINTING & FORMATTING ---",
    "lint:all": "bun run lint:frontend && bun run lint:backend",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:backend": "cd backend && bun run lint",
    "lint:fix": "cd frontend && bun run lint:fix && cd ../backend && bun run lint:fix",
    "lint:fix:enhanced": "bun run format && bun run lint:fix",
    "stylelint": "cd frontend && bun run stylelint",
    "stylelint:fix": "cd frontend && bun run stylelint:fix",
    "stylelint:fix:enhanced": "cd frontend && bun run stylelint:fix:enhanced",
    "format": "bunx prettier --write \"**/*.{js,ts,vue,css,md,json}\" --ignore-path .gitignore",
    "format:check": "bunx prettier --check \"**/*.{js,ts,vue,css,md,json}\" --ignore-path .gitignore",
    "//-deployment": "--- DEPLOYMENT ---",
    "deploy:backend": "cd backend && bun run deploy",
    "//-audits": "--- AUDITS & CLEANUP ---",
    "audit:lhci": "bun run build:frontend && bunx -y @lhci/cli autorun --config ./lighthouserc.json",
    "audit:lhci:fast": "bun run build:frontend:fast && bunx -y @lhci/cli autorun --config ./lighthouserc.json",
    "audit:lhci:collect": "bunx -y @lhci/cli collect --config ./lighthouserc.json",
    "audit:lhci:assert": "bunx -y @lhci/cli assert --config ./lighthouserc.json",
    "audit:lhci:summary": "bun ./scripts/lhci-summary.mjs",
    "clean": "cd frontend && bun run clean-dist && cd .. && rm -rf node_modules/.cache 2>/dev/null || true",
    "test:commit": "bun test-commit.js",
    "e2e:management": "bun ./scripts/e2e-management.mjs --ext $EXT_ID",
    "e2e:management:perf": "bun ./scripts/e2e-management.mjs --ext $EXT_ID --perf --cpu ${CPU_RATE:-4} --net ${NET_PRESET:-slow4g}",
    "e2e:management:all": "bun ./scripts/e2e-management.mjs --ext $EXT_ID && bun ./scripts/e2e-management.mjs --ext $EXT_ID --perf --cpu ${CPU_RATE:-4} --net ${NET_PRESET:-slow4g}"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.41",
    "postcss-html": "^1.7.0",
    "puppeteer-core": "^23.7.0",
    "stylelint": "^16.9.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0"
  },
  "dependencies": {
    "eslint-config-prettier": "^10.1.8"
  }
}
