{
  "name": "acuitybookmarks-root",
  "private": true,
  "version": "1.0.0",
  "description": "AcuityBookmarks monorepo (Bun workspaces)",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.21",
  "scripts": {
    "//": "--- PREPARE & SETUP ---",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "install:all": "bun install",
    "clean:deps": "rm -rf node_modules frontend/node_modules backend/node_modules bun.lockb frontend/bun.lock backend/bun.lock 2>/dev/null || true && echo '🧹 清理完成，可以重新运行 bun install'",
    "install:backend-standalone": "cd backend && bun install --no-save && echo '📦 backend 已安装独立 node_modules'",
    "//": "--- DEVELOPMENT ---",
    "dev:frontend": "bun --cwd frontend run dev",
    "dev:backend": "bun --cwd backend run dev",
    "dev:all": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\"",
    "//": "--- BUILD ---",
    "build:frontend": "bun --cwd frontend run build",
    "build:frontend:fast": "bun --cwd frontend run build:prod",
    "build:frontend:analyze": "bun --cwd frontend run build:analyze",
    "build:hot": "bun --cwd frontend run build:hot",
    "build:hot:cf": "bun --cwd frontend run build:hot:cf",
    "build:hot:no-lint": "bun --cwd frontend run build:hot:no-lint",
    "build:backend": "echo 'Backend is a Cloudflare Worker, deployed directly without a separate build step.'",
    "build:all": "bun run build:frontend",
    "typecheck": "bun --cwd frontend run type-check",
    "//": "--- LINTING & FORMATTING ---",
    "lint:all": "bun run lint:frontend && bun run lint:backend",
    "lint:frontend": "bun --cwd frontend run lint",
    "lint:backend": "bun --cwd backend run lint",
    "lint:fix": "bun --cwd frontend run lint:fix && bun --cwd backend run lint:fix",
    "lint:fix:enhanced": "bun run format && bun run lint:fix",
    "stylelint": "bun --cwd frontend run stylelint",
    "stylelint:fix": "bun --cwd frontend run stylelint:fix",
    "stylelint:fix:enhanced": "bun --cwd frontend run stylelint:fix:enhanced",
    "format": "bunx prettier --write \"**/*.{js,ts,vue,css,md,json}\" --ignore-path .gitignore",
    "format:check": "bunx prettier --check \"**/*.{js,ts,vue,css,md,json}\" --ignore-path .gitignore",
    "//": "--- DEPLOYMENT ---",
    "deploy:backend": "bun --cwd backend run deploy",
    "//": "--- AUDITS & CLEANUP ---",
    "audit:lhci": "bun run build:frontend && bunx -y @lhci/cli autorun --config ./lighthouserc.json",
    "audit:lhci:fast": "bun run build:frontend:fast && bunx -y @lhci/cli autorun --config ./lighthouserc.json",
    "audit:lhci:collect": "bunx -y @lhci/cli collect --config ./lighthouserc.json",
    "audit:lhci:assert": "bunx -y @lhci/cli assert --config ./lighthouserc.json",
    "audit:lhci:summary": "bun ./scripts/lhci-summary.mjs",
    "clean": "bun --cwd frontend run clean-dist && rm -rf node_modules/.cache 2>/dev/null || true",
    "test:commit": "bun test-commit.js",
    "e2e:management": "node ./scripts/e2e-management.mjs --ext $EXT_ID",
    "e2e:management:perf": "node ./scripts/e2e-management.mjs --ext $EXT_ID --perf --cpu ${CPU_RATE:-4} --net ${NET_PRESET:-slow4g}",
    "e2e:management:all": "node ./scripts/e2e-management.mjs --ext $EXT_ID && node ./scripts/e2e-management.mjs --ext $EXT_ID --perf --cpu ${CPU_RATE:-4} --net ${NET_PRESET:-slow4g}"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "puppeteer-core": "^23.7.0"
  },
  "dependencies": {
    "eslint-config-prettier": "^10.1.8"
  }
}
