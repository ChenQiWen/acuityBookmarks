{
  "name": "acuitybookmarks-root",
  "private": true,
  "version": "1.0.0",
  "description": "AcuityBookmarks monorepo (Bun workspaces)",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "website",
    "packages/*"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.21",
  "resolutions": {
    "zod": "^3.25.8",
    "@types/node": "^24.3.0",
    "postcss": "^8.4.41",
    "stylelint": "^16.25.0",
    "typescript": "~5.8.3",
    "eslint": "^9.35.0"
  },
  "scripts": {
    "build": "bunx turbo run build",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "turbo:build": "bunx turbo run build",
    "turbo:dev": "bunx turbo run dev",
    "turbo:lint": "bunx turbo run lint",
    "turbo:typecheck": "bunx turbo run typecheck",
    "turbo:clean": "bunx turbo run clean",
    "install:all": "bun install",
    "install:clean": "bun run clean:deps && bun install && echo 'âœ… ä¾èµ–å·²æ¸…ç†å¹¶é‡æ–°å®‰è£…'",
    "clean:deps": "rm -rf node_modules frontend/node_modules backend/node_modules website/node_modules packages/*/node_modules bun.lockb frontend/bun.lock backend/bun.lock 2>/dev/null || true && echo 'ğŸ§¹ æ¸…ç†å®Œæˆï¼Œå¯ä»¥é‡æ–°è¿è¡Œ bun install'",
    "install:backend-standalone": "cd backend && bun install --no-save && echo 'ğŸ“¦ backend å·²å®‰è£…ç‹¬ç«‹ node_modules'",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:backend:hot": "cd backend && bun run dev:hot",
    "dev:website": "cd website && bun run dev",
    "dev:all": "bunx concurrently \"bun run dev:frontend\" \"bun run dev:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\"",
    "dev:all:hot": "bunx concurrently \"bun run build:hot\" \"bun run dev:backend:hot\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\"",
    "build:frontend": "cd frontend && bun run build",
    "build:frontend:fast": "cd frontend && bun run build:prod",
    "build:frontend:analyze": "cd frontend && bun run build:analyze",
    "build:hot": "cd frontend && bun run build:hot",
    "build:hot:no-lint": "cd frontend && bun run build:hot:no-lint",
    "build:backend": "echo 'Backend is a Cloudflare Worker, deployed directly without a separate build step.'",
    "build:website": "cd website && bun run build",
    "build:website:generate": "cd website && bun run generate",
    "build:all": "bunx turbo run build",
    "build:all:legacy": "bun run build:frontend && bun run build:website",
    "typecheck": "bunx turbo run typecheck",
    "typecheck:legacy": "cd frontend && bun run type-check",
    "lint:check": "bun run lint:all",
    "lint:all": "bunx turbo run lint",
    "lint:all:legacy": "bun run lint:frontend && bun run lint:backend",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:backend": "cd backend && bun run lint",
    "lint:website": "cd website && bun run lint || echo 'Website linting not configured yet'",
    "lint:fix": "cd frontend && bun run lint:fix && cd ../backend && bun run lint:fix",
    "lint:fix:enhanced": "bun run format && bun run lint:fix",
    "stylelint": "cd frontend && bun run stylelint",
    "stylelint:fix": "cd frontend && bun run stylelint:fix",
    "stylelint:fix:enhanced": "cd frontend && bun run stylelint:fix:enhanced",
    "format": "bunx prettier --write \"**/*.{js,ts,vue,css,md,json}\" --ignore-path .gitignore",
    "format:check": "bunx prettier --check \"**/*.{js,ts,vue,css,md,json}\" --ignore-path .gitignore",
    "deploy:backend": "cd backend && bun run deploy",
    "deploy:website": "cd website && bun run build && echo 'Website build complete. Deploy dist/ directory to your hosting service.'",
    "audit:lhci": "bun run build:frontend && bunx -y @lhci/cli autorun --config ./frontend/lighthouserc.json",
    "audit:lhci:fast": "bun run build:frontend:fast && bunx -y @lhci/cli autorun --config ./frontend/lighthouserc.json",
    "audit:lhci:collect": "bunx -y @lhci/cli collect --config ./frontend/lighthouserc.json",
    "audit:lhci:assert": "bunx -y @lhci/cli assert --config ./frontend/lighthouserc.json",
    "audit:lhci:summary": "bun ./scripts/lhci-summary.mjs",
    "clean": "cd frontend && bun run clean-dist && cd .. && rm -rf node_modules/.cache 2>/dev/null || true",
    "clean:cache": "find . -name '.eslintcache' -o -name '.stylelintcache' -o -name '*.tsbuildinfo' | grep -v node_modules | xargs rm -f && echo 'ğŸ§¹ å·²æ¸…ç†æ‰€æœ‰å·¥å…·ç¼“å­˜æ–‡ä»¶'",
    "test:commit": "bun test-commit.js",
    "e2e:management": "bun ./scripts/e2e-management.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl}",
    "e2e:management:perf": "bun ./scripts/e2e-management.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl} --perf --cpu ${CPU_RATE:-4} --net ${NET_PRESET:-slow4g}",
    "e2e:management:all": "bun ./scripts/e2e-management.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl} && bun ./scripts/e2e-management.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl} --perf --cpu ${CPU_RATE:-4} --net ${NET_PRESET:-slow4g}",
    "export:env": "bun ./scripts/export-env.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl}",
    "import:env": "bun ./scripts/import-env.mjs --ext ${EXT_ID:-gdjcmpenmogdikhnnaebmddhmdgbfcgl}"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.41",
    "postcss-html": "^1.7.0",
    "puppeteer-core": "^23.7.0",
    "sass-embedded": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "turbo": "^2.6.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0"
  },
  "dependencies": {
    "eslint-config-prettier": "^10.1.8"
  }
}
